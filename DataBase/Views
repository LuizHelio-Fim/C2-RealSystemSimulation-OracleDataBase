CREATE OR REPLACE VIEW LABDATABASE.V_ALUNOS_PRINCIPAIS AS
SELECT
    MATRICULA AS ID_CHAVE,
    NOME AS DESCRICAO,
    CPF,
    EMAIL,
    PERIODO
FROM
    LABDATABASE.ALUNO
ORDER BY
    NOME;

CREATE OR REPLACE VIEW LABDATABASE.V_PROFESSORES_PRINCIPAIS AS
SELECT
    ID_PROFESSOR AS ID_CHAVE,
    NOME AS DESCRICAO,
    CPF,
    EMAIL,
    STATUS
FROM
    LABDATABASE.PROFESSOR
ORDER BY
    NOME;
